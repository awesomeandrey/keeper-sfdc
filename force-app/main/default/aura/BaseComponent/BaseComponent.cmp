<aura:component description="BaseComponent" extensible="true">
    <aura:attribute
            name="isDesignMode"
            type="Boolean"
            description="Flag indicating that the component is in Lightning App Builder environment"
            default="false"
    />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    {!v.body}
</aura:component>
